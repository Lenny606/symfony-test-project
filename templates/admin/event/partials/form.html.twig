<script>
    // JavaScript code here
    document.addEventListener("DOMContentLoaded", function() {
        var checkbox = document.getElementById("toggleOptionalFields");
        var toggleOptionalFieldsContact = document.querySelectorAll(".optional-field-contact");

        checkbox.addEventListener("change", function() {
            if (checkbox.checked) {
                toggleOptionalFieldsContact.forEach(function(field) {
                    field.style.display = "block";
                });
            } else {
                toggleOptionalFieldsContact.forEach(function(field) {
                    field.style.display = "none";
                });
            }
        });

        // Initially hide optional fields if the checkbox is not checked
        if (!checkbox.checked) {
            toggleOptionalFieldsContact.forEach(function(field) {
                field.style.display = "none";
            });
        }
        var checkboxAddress = document.getElementById("toggleOptionalFieldsAddress");
        var toggleOptionalFieldsAddress = document.querySelectorAll(".optional-field-address");

        checkboxAddress.addEventListener("change", function() {
            if (checkboxAddress.checked) {
                toggleOptionalFieldsAddress.forEach(function(field) {
                    field.style.display = "block";
                });
            } else {
                toggleOptionalFieldsAddress.forEach(function(field) {
                    field.style.display = "none";
                });
            }
        });

        // Initially hide optional fields if the checkboxAdress is not checked
        if (!checkboxAddress.checked) {
            toggleOptionalFieldsAddress.forEach(function(field) {
                field.style.display = "none";
            });
        }
    });
</script>
