{% extends 'admin/partials/administration_layout.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="rounded-md pd-2 bg-green-300 border dark:border-green-600">{{ message }}</div>
    {% endfor %}
    <h2 class="text-3xl font-semibold mb-4">Cache</h2>

    <form action="{{ path('admin_cache_save', {'dir': 'json'}) }}" method="post">
        <label for="filename">
        <input type="text" id="filename" name="filename">
        <textarea class="rounded-md" cols="10" rows="10"></textarea>
        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">Save into JSON Directory</button>
    </form>


    <form action="{{ path('admin_cache_delete', {'dir': 'json'}) }}" method="post">
        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">Clear JSON Directory</button>
    </form>
{% endblock %}