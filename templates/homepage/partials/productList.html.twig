<div class="product-list">
    {% for product in featuredProducts %}
        {% if product.name is not empty %}
            <div class="product">
                <h3>{{ product.name }}</h3>
                <p>{{ product.description }}</p>
                <p>Price: ${{ product.price }} Eur</p>
                <!-- Add more product details as needed -->
            </div>
        {% endif %}
    {% endfor %}
</div>