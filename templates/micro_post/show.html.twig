{% extends 'base.html.twig' %}

{% block title %}Posts {{ post.title }} {% endblock %}

{% block body %}
    <h3>{{ post.title }}</h3>
    <div>{{ post.text }}</div>
    <div>
        {% if date(post.createdAt) < date('-1year') %}
            Older than 1 Year
        {% else %}
            {{ post.createdAt|date('d/m/Y') }}
        {% endif %}
    </div>
    <a href="{{ path('app_micro_comment_add'), {id: post.id} }}">
        <div>
            Add Comment
        </div>
    </a>

{% endblock %}
