{% extends 'base.html.twig' %}

{% block title %}Image upload{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8">
        {{ form_start(form, {'attr': {'novalidate': "novalidate"}}) }}

        <div class="mb-4">
            {{ form_label(form.image, 'Upload', {'label_attr':
                { 'class': 'shadow-sm border-transparent bg-blue-300 hover:bg-grey-500 rounded-md border p-2 cursor-pointer'

                }}) }}
            {{ form_widget(form.image,  {'attr': {'class': 'hidden'} }) }}
            {{ form_errors(form.image, {'class': 'text-red-500 text-sm'}) }}
        </div>

        <button type="submit"
                class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Save
        </button>

        {{ form_end(form) }}
    </div>
    <div class="img-container">
{#        <img src="{{ images ~ img }}" class="image_upload">#}
        <img src="{{ images ~ app.user.userProfile.image }}" class="image_upload w-25 h-25" alt="logo" />

    </div>
{% endblock %}
